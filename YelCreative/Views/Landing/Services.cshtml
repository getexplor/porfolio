
@{
    Layout = null;
}

<!-- ======= Services Section ======= -->
<section id="services" class="services">
    <div class="container">

        <div class="section-title">
            <h2>Services</h2>
            <p>My Services</p>
        </div>

        <div class="row">
            @if (ViewBag.ServiceList != null)
            {
                foreach (var item in ViewBag.ServiceList)
                {
                    if (item.Service_Name == "Wedding" || item.Service_Name == "wedding")
                    {
                        <div class="col-lg-4 col-md-6 d-flex align-items-stretch pb-3">
                            <div class="icon-box">
                                <div class="icon"><i class="bx bxs-wine"></i></div>
                                <h4><a href="">@item.Service_Name</a></h4>
                                <p>@item.Content_Service</p>
                            </div>
                        </div>
                    }
                    else if(item.Service_Name == "Photography" || item.Service_Name == "photography")
                    {
                        <div class="col-lg-4 col-md-6 d-flex align-items-stretch pb-3">
                            <div class="icon-box">
                                <div class="icon"><i class="bx bxs-camera"></i></div>
                                <h4><a href="">@item.Service_Name</a></h4>
                                <p>@item.Content_Service</p>
                            </div>
                        </div>
                    }
                    else if (item.Service_Name == "Videography" || item.Service_Name == "Videography")
                    {
                        <div class="col-lg-4 col-md-6 d-flex align-items-stretch pb-3">
                            <div class="icon-box">
                                <div class="icon"><i class="bx bxs-video"></i></div>
                                <h4><a href="">@item.Service_Name</a></h4>
                                <p>@item.Content_Service</p>
                            </div>
                        </div>
                    }
                    else if (item.Service_Name == "Grapich Design" || item.Service_Name == "grapich design")
                    {
                        <div class="col-lg-4 col-md-6 d-flex align-items-stretch pb-3">
                            <div class="icon-box">
                                <div class="icon"><i class="bx bxs-paint"></i></div>
                                <h4><a href="">@item.Service_Name</a></h4>
                                <p>@item.Content_Service</p>
                            </div>
                        </div>
                    }
                    else if (item.Service_Name == "Product Photo" || item.Service_Name == "product photo")
                    {
                        <div class="col-lg-4 col-md-6 d-flex align-items-stretch pb-3">
                            <div class="icon-box">
                                <div class="icon"><i class="bx bxs-shopping-bag"></i></div>
                                <h4><a href="">@item.Service_Name</a></h4>
                                <p>@item.Content_Service</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-4 col-md-6 d-flex align-items-stretch pb-3">
                            <div class="icon-box">
                                <div class="icon"><i class="bx bxs-movie"></i></div>
                                <h4><a href="">@item.Service_Name</a></h4>
                                <p>@item.Content_Service</p>
                            </div>
                        </div>
                    }
                }
            }
        </div>

    </div>
</section><!-- End Services Section -->
