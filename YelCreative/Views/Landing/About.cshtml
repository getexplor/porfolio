@model YelCreative.Models.LandingViewMode

@{
    Layout = null;
}

<!-- ======= About Section ======= -->
<section id="about" class="about">

    <!-- ======= About Me ======= -->
    <div class="about-me container">

        <div class="section-title">
            <h2>About</h2>
            <p>Learn more about me</p>
        </div>

        <div class="row">
            <div class="col-lg-4" data-aos="fade-right">
                <img src="@Model.Image_Path" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                <h3>@Model.Current_Position</h3>
                <p>
                    @Model.Content_About
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="icofont-rounded-right"></i> <strong>Birthday:</strong> @Model.Birthday</li>
                            <li><i class="icofont-rounded-right"></i> <strong>Phone:</strong> @Model.Phone</li>
                            <li><i class="icofont-rounded-right"></i> <strong>City:</strong> @Model.City</li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="icofont-rounded-right"></i> <strong>Age:</strong> @Model.Age</li>
                            <li><i class="icofont-rounded-right"></i> <strong>Degree:</strong> @Model.Degree</li>
                            <li><i class="icofont-rounded-right"></i> <strong>Email:</strong> @Model.Email</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div><!-- End About Me -->
    <!-- ======= Skills  ======= -->
    <div class="skills container">

        <div class="section-title">
            <h2>Skills</h2>
        </div>

        <div class="row skills-content">

            <div class="col-lg-12">

                @if (ViewBag.SkillList != null)
                {
                    foreach (var item in ViewBag.SkillList)
                    {
                        <div class="progress progress-bar-striped">
                            <span class="skill">@item.Skill_Name <i class="val">@item.Skill_Value%</i></span>
                            <div class="progress-bar-wrap">
                                <div class="progress-bar" role="progressbar" aria-valuenow=@item.Skill_Value aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    }
                }

            </div>

        </div>

    </div><!-- End Skills -->
    <!-- ======= Interests ======= -->
    <div class="interests container">

        <div class="section-title">
            <h2>Interests</h2>
        </div>

        <div class="row">
            
            @if (ViewBag.ServiceList != null)
            {
                var count = 0;
                foreach (var item in ViewBag.ServiceList)
                {
                    count = count + 1;
                    <div class="col-lg-3 col-md-4 mt-4">
                        <div class="icon-box">
                            <i class="" style="color: #29cc61;">@count</i>
                            <h3>@item.Service_Name</h3>
                        </div>
                    </div>
                }
            }

        </div>

    </div><!-- End Interests -->
</section><!-- End About Section -->
<!-- ======= Resume Section ======= -->