
@{
    Layout = null;
}

<!-- ======= Portfolio Section ======= -->
<section id="portfolio" class="portfolio">
    <div class="container">

        <div class="section-title">
            <h2>Portfolio</h2>
            <p>My Works</p>
        </div>

        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="portfolio-flters">
                    @if (ViewBag.CateList != null)
                    {
                        foreach (var item in ViewBag.CateList)
                        {
                            <li data-filter="*" class="filter-active">All</li>
                            <li data-filter=".filter-@item.Id_Category">@item.Category_Name</li>
                        }
                    }
                </ul>
            </div>
        </div>

        <div class="row portfolio-container">

            @if (ViewBag.PorfoList != null)
            {
                foreach (var item in ViewBag.PorfoList)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item filter-@item.Category">
                        <div class="portfolio-wrap">
                            <img src="@item.ImagePath" class="img-fluid" alt="">
                            <div class="portfolio-info">
                                <h4>@item.Title</h4>
                                <div class="portfolio-links">
                                    <a href="@item.ImagePath" data-gall="portfolioGallery" class="venobox" title="@item.Title"><i class="bx bx-plus"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }


        </div>
    </div>
</section><!-- End Portfolio Section -->
