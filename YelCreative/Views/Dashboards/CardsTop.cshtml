@{
    var PortoCount = Enumerable.Count(ViewBag.PortoList);
}

<!-- start card -->
<div class="row">
    <div class="col-lg-3">
        <div class="widget style1 blue-bg ">
            <div class="row">
                <div class="col-4">
                    <i class="fa fa-image fa-5x"></i>
                </div>
                <div class="col-8 text-right">
                    <span> Portofolio </span>
                    <h2 class="font-bold">@PortoCount</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget style1 navy-bg">
            <div class="row">
                <div class="col-4">
                    <i class="fa fa-cloud fa-5x"></i>
                </div>
                <div class="col-8 text-right">
                    <span> Today degrees </span>
                    <h2 class="font-bold">26'C</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end card -->