@model YelCreative.Models.ServiceViewModel

<!--Model Edit-->
<div class="modal inmodal fade" id="ModalEditService" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Edit Service</h4>
                <small class="font-bold">Update your service company.</small>
            </div>
            <form id="FormEditService">
                <div class="modal-body" id="modalBodyEdit">
                    <!-- start form -->
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            @Html.HiddenFor(m => m.Id_Service, new { @id="CurrentIdService"})
                            @Html.TextBoxFor(model => model.Service_Name, new { @class = "form-control" , @id="CurrentName"})
                            @Html.ValidationMessageFor(model => model.Service_Name, "", new { @class = "text-danger" , @id = "CurrentContent" })
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Content</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(model => model.Content_Service, new { @class = "form-control", @rows = "10", @id = "ContentService1" })
                            @Html.ValidationMessageFor(model => model.Content_Service, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- end form -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="submit" id="btnEditSubmit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>